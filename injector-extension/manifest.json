{
  "manifest_version": 3,
  "name": "Request Injector",
  "version": "1.0",
  "permissions": ["scripting", "storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Request Injector"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["injector.js"]
    }
  ]
}